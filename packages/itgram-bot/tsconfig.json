{
    "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
    "ts-node": {
        "esm": true,
        "files": true
    },
    "compilerOptions": {
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "build"
    },
    "include": ["src/**/*"]
}
